<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/splash_navigation"
    app:startDestination="@id/mainSplashFragment">

    <fragment
        android:id="@+id/mainSplashFragment"
        android:name="com.example.covidapp.ui.splash.MainSplashFragment"
        android:label="fragment_main_splash"
        tools:layout="@layout/fragment_main_splash" >
        <action
            android:id="@+id/action_mainSplashFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/splashFirstFragment"
        android:name="com.example.covidapp.ui.splash.SplashFirstFragment"
        android:label="fragment_splash_first"
        tools:layout="@layout/fragment_splash_first" />
    <fragment
        android:id="@+id/splashSecondFragment"
        android:name="com.example.covidapp.ui.splash.SplashSecondFragment"
        android:label="SplashSecondFragment" />
    <fragment
        android:id="@+id/splashThirdFragment"
        android:name="com.example.covidapp.ui.splash.SplashThirdFragment"
        android:label="SplashThirdFragment" />
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.covidapp.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
</navigation>